{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "Core/*.cpp",
                "linedrawer.cpp",
                "Lights/*.cpp",
                "Objects/*.cpp",
                "Materials/*.cpp",
                "Cameras/*.cpp",
                "-ICameras",
                "-IMaterials",
                "-IObjects",
                "-ICore",
                "-ILights",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
                // "main_lab2.cpp",
                // "Core/framebuffer.cpp",
                // "linedrawer.cpp",
                // "Objects/polymesh_object.cpp",
                // "-IObjects",
                // "-ICore"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}